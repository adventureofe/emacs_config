# -*- mode: snippet -*-
# name: angles
# key: angles
# --
static double degrees_to_radians(double degrees)
{
    return degrees * Math.PI / 180;
}

static double radians_to_degrees(double radians)
{
    return radians * 180/ Math.PI;
}

static double radians_to_gradians(double radians)
{
    return radians * 200 / Math.PI;
}

static double gradians_to_radians(double gradians)
{
    return gradians * Math.PI / 200;
}

static double degrees_to_gradians(double degrees)
{
    return radians_to_gradians(degrees_to_radians(degrees));
}

static double gradians_to_degrees(double gradians)
{
    return radians_to_degrees(gradians_to_radians(gradians));
}